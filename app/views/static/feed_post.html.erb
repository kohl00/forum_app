<div class="container-fluid">
	<%= render 'sidebar' %>

		<div class="col-md-10">
			<div class="row">
					<div class="col-md-12">
						<div class="row top-heading">
								<div class="col-md-10 top-heading">
									<p> Got some news to share?</p>
								</div>
								<div class="col-md-2 top-heading">
									<span class="drop-down pull-right">dd</span>
								</div>
						</div>
					</div>
					<div class="col-md-12 feed_post-post-row">
						<div class="row feed_post-post-row">
							<div class="col-md-2 col-md-offset-1">
								<select>
									  <option value="volvo">Volvo</option>
									  <option value="saab">Saab</option>
								</select>
							</div>
							<div class="col-md-8 textarea-row">
								<textarea class="form-control" name="post" rows="1">
									Add to the Conversation
								</textarea>
							</div>
							<div class="col-md-1 submit-button">
								<input class="post-submit" type="submit" name="Submit" value="Submit">
							</div>
						</div>
					</div>	
					<div class="col-md-12">
						<div class="row nav-heading">
							<div class="col-md-3 posts">
								<div class="all_posts">
									<img src="<%= image_url 'subnav_allposts.png' %>"/> ALL POSTS
								</div>
							</div>
							<div class="col-md-3 questions">
								<div class="all_questions">
									<img src="<%= image_url 'subnav_question.png' %>"/> QUESTIONS
								</div>
							</div>
							<div class="col-md-3 job-posts">
								<div class="all_jobposts">
									<img src="<%= image_url 'subnav_jobs.png' %>"/>JOB POSTS
								</div>
							</div>
							<div class="col-md-3 announcements">
								<div class="all_announcements">
									<img src="<%= image_url 'subnav_announcements.png' %>"/>ANNOUNCEMENTS
								</div>
							</div>
						</div>
					</div>
					<% @posts.each do |post| %>
						<div class="row">

							<div class="col-md-12">
								<div class="row">
									<div class="col-md-2 col-md-offset-1 post-category-image">
											<div class="post-category <%= post.category %>-post"> CATEGORY
											</div>
									</div>
									<div class="col-md-8 post-text">
										<p class="author">
										  <span><%=post.user_id %></span> <!--//SEP 14.2014 @ 12:00AM--> <%=post.created_at %>
										</p>
										<br>
										<p class="text-body">
											<%= post.content %>
											<!--Jean shorts +1 Portland, Tumblr single-origin coffee kogi lo-fi American Apparel next level VHS kale chips Marfa bitters fixie. Swag master cleanse Blue Bottle Vice Bushwick Truffaut, Marfa keffiyeh semiotics Tumblr Godard Wes Anderson mlkshk. -->
										</p>
									</div>
									<div class="col-md-1">
											<div class="like_status">
												Like Status
											</div>
									</div>
								</div>
							</div>

							<div class="col-md-12 convo-row <%= post.category %>-post">
								<div class="row">
									<div class="col-md-2 col-md-offset-1">
										<img class="chat-bubble" src="http://placehold.it/50x50"/>
									</div>
									<div class="col-md-8 textarea-row <%= post.category %>">
										<textarea class="colormatch form-control" name="post" rows="1">
											Add to the Conversation
										</textarea>
									</div>
									<div class="col-md-1 submit-button">
										<input class="post-submit" type="submit" name="Submit" value="Submit">
									</div>
								</div>
								<div class="row comments-row">
									<div class="col-md-2 col-md-offset-1 user-image">
										<img class="friend-avatar <%= post.category %>-post" src="http://placehold.it/50x50"/>
									</div>
									<div class="col-md-8">
										<p class="author">
											<span>Member Name.</span> //SEP 14.2014 @ 12:00AM 
										</p>
										<p class="author">
											ean shorts +1 Portland, Tumblr single-origin coffee kogi lo-fi American Apparel next level VHS kale chips Marfa bitters fixie. Swag master cleanse Blue Bottle Vice Bushwick Truffaut, Marfa keffiyeh semiotics Tumblr Godard Wes Anderson mlkshk. 
										</p>
									</div>
								</div>
								<hr class="feed-divider"/>
							</div>
						</div>
						<% end %>
					</div>	

					<div class="col-md-12 pag-row">
						<div class="row">
							<div class="col-md-4 col-md-offset-4">
								<ul class="pagination">
									<li><a href="#">Prev</a></li>
									<li><a href="#">1</a></li>
									<li><a href="#">2</a></li>
									<li><a href="#">3</a></li>
									<li><a href="#">4</a></li>
									<li><a href="#">5</a></li>
									<li><a href="#">Next</a></li>
								</ul>
							</div>
						</div>
					</div>
					<div class="col-md-12 footing">
			
							<div class="col-md-4 col-md-offset-1 footerleft">
								<p> 
										Happy Fun Corp Alumni Forum<br>
									<span>
										Built for the students by the students
									</span>
								</p>
							</div>
							<div class="col-md-7 footerright pull-right">
								<p>
									Happy Fun Corp All rights Reserved
								</p>
							</div>
					</div>
				<!--xtradiv?-->
			</div>
		</div>
	</div>
</div>