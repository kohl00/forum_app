<div class="container-fluid">
	<%= render 'static/sidebar' %>

		<div class="col-md-10">
			<%=form_for(@user, :url=> profile_update_path,method: :post, :html => { :multipart => true }) do |f| %>
				<div class="row edit-profile-head">
					<div class="col-md-4 profile-pic">
						<%= f.label :avatar do %>
							<!--img src="http://placehold.it/350x200"/-->
							<%= image_tag @user.avatar.url, :class=>'img-responsive' %>
							<%= f.file_field :avatar %>
						<% end %>
						
					</div>			<!--profilepic-->
					<div class="col-md-8">
						<div class="row">
							<div class="col-xs-5 offset-1 name-edit">
								<%= f.text_field :first_name, :class=>'form-control with-red-bg' %>
							</div>
							<div class="col-xs-5 offset-1 name-edit">
								<%= f.text_field :last_name, :class=>'form-control with-red-bg' %>
							</div>
						</div>
					</div>			<!--name&links-->
				</div>
				<div class="row edit-profile-body">
					<div class="col-md-10 col-md-offset-1 about-me-edit">
						<p><%=f.label :about_me %></p>
						<%=f.text_area :about_me, :class=>'form-control'%>
					</div>
					<div class="col-md-10 col-md-offset-1 interests-edit">
						<p><%= f.label :interests, 'Professional Interests'%></p>
						<%=f.text_area :interests, :class=>'form-control'%>
					</div>
					<div class="col-md-10 col-md-offset-1 social-list">
						<ul>
							<li class="github"><%=f.text_field :github_profile,:class=>'form-control' %><li>
							<li class="skype"><%=f.text_field :skype_profile,:class=>'form-control'%><li>
							<li class="email"><%=f.text_field :email,:class=>'form-control' %><li>
							<li class="twitter"><%=f.text_field :twitter_profile,:class=>'form-control' %><li>
							<li class="website"><%=f.text_field :personal_website, :class=>'form-control' %><li>
						</ul>
					</div>
					<div class="col-md-4 col-md-offset-4 submit-changes">
						<%=link_to 'Cancel', profile_path %>
						<%= f.submit 'Save Changes', :class=>'profile-update-btn'%>
					</div>

					<div class="col-md-12 footing">
			
							<div class="col-md-4 col-md-offset-1 footerleft">
								<p> 
										Happy Fun Corp Alumni Forum<br>
									<span>
										Built for the students by the students
									</span>
								</p>
							</div>
							<div class="col-md-7 footerright pull-right">
								<p>
									Happy Fun Corp All rights Reserved
								</p>
							</div>
					</div>
				</div>
				<% end %>
		</div><!--10col-end-->
	</div><!--row container-->
</div><!--containerfluid-->